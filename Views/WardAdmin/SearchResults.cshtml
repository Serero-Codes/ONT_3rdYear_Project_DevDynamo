@model IEnumerable<dynamic>
@{
    ViewBag.Title = "Search Results";
}

<div class="container mt-4">
    <h2 class="text-info mb-3"><i class="bi bi-search"></i> Search Results</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning shadow-sm">
            <i class="bi bi-exclamation-triangle"></i> No patients found.
        </div>
    }
    else
    {
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Date Of Birth</th>
                    <th>Admission Status</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td>@p.FullName</td>
                        <td>@p.Gender</td>
                        <td>@p.DateOfBirth.ToString("dd/MM/yyyy")</td>
                        <td>
                            @if (p.IsAdmitted)
                            {
                                <span class="badge bg-info">Admitted</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Not Admitted</span>
                            }
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="@Url.Action("Details", "WardAdmin", new { id = p.PatientID })">View</a>
                            <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", "WardAdmin", new { id = p.PatientID })">Edit</a>
                            <a class="btn btn-sm btn-danger" href="@Url.Action("SoftDelete", "WardAdmin", new { id = p.PatientID })">Archive</a>
                            @if (p.IsAdmitted)
                            {
                                <a class="btn btn-sm btn-info" href="@Url.Action("ViewAdmission", "WardAdmin", new { patientId = p.PatientID })">Show Admission</a>
                            }
                            <a class="btn btn-sm btn-outline-success" href="@Url.Action("GetMedicalHistory", "WardAdmin", new { patientId = p.PatientID })">Medical History</a>
                            <a class="btn btn-sm btn-outline-secondary" href="@Url.Action("GetPatientAllergies", "WardAdmin", new { patientId = p.PatientID })">Allergies</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    <a asp-action="AllPatients" class="btn btn-outline-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Back to Patients
    </a>
</div>
