@model ONT_3rdyear_Project.Models.PatientMedicationScript
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    var user = await UserManager.GetUserAsync(User);
    var roles = await UserManager.GetRolesAsync(user);
}

<div class="medication-form-container">
    <div class="container">
        <!-- Page Header -->
        <div class="form-header">
            <h1 class="page-title">
                <i class="fas fa-pills" style="color: #17a2b8; margin-right: 15px;"></i>
                Administer Medication
            </h1>
            <p style="color: #6c757d; font-weight: 500; margin: 0;">Record medication administration safely and accurately</p>
        </div>

        <!-- Main Form Card -->
        <div class="medication-form-card">

           

            <!-- Medication Form -->
            <form asp-action="CreateAdminister" method="post">
                <input type="hidden" name="PatientId" value="@ViewBag.PatientId" />

                <!-- Patient Name (Read-only) -->
                <div class="form-group-custom">
                    <label class="form-label-custom">
                        Patient
                    </label>
                    <input type="text" class="form-control form-control-custom" value="@ViewBag.PatientName" readonly />
                    @if (ViewBag.PatientAllergies != null && ((List<string>)ViewBag.PatientAllergies).Count > 0)
                    {
                        <div class="safety-warning">
                            <h4><i class="fas fa-exclamation-triangle" style="margin-right:8px;"></i>Allergy Warning!</h4>
                            <p>Patient has the following allergies:</p>
                            <ul>
                                @foreach (var allergy in (List<string>)ViewBag.PatientAllergies)
                                {
                                    <li>@allergy</li>
                                }
                            </ul>
                        </div>
                    }
                </div>

                <!-- Medication Selection -->
               
                <div class="form-group-custom">
                    <label asp-for="MedicationId" class="form-label-custom required-field">
                        Medication
                    </label>
                    <div class="select-wrapper">
                        <select asp-for="MedicationId" class="form-control form-control-custom" id="medicationSelect" required>
                            <option value="">-- Select Medication --</option>
                            @foreach (var med in ViewBag.MedicationList)
                            {
                                <option value="@med.MedicationId" data-schedule="@med.Schedule">
                                    @med.Name (Schedule @med.Schedule)
                                </option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="MedicationId" class="text-danger"></span>
                </div>

                <!-- Dosage -->
                <div class="form-group-custom">
                    <label asp-for="Dosage" class="form-label-custom required-field">
                        Dosage
                    </label>
                    <div class="dosage-input-group">
                        <input asp-for="Dosage" class="form-control form-control-custom dosage-input" placeholder="e.g., 1 tablet with meals daily" pattern="[0-9]+\.?[0-9]*" title="Please enter a valid dosage amount" required />
                        <span class="dosage-unit">mg</span>
                    </div>
                   
                    <span asp-validation-for="Dosage" class="text-danger"></span>
                </div>

                <!-- Administration Date -->
                <div class="form-group-custom">
                    <label asp-for="AdministeredDate" class="form-label-custom required-field">
                        Administration Date
                    </label>
                    <div class="date-input-wrapper">
                        <input asp-for="AdministeredDate" type="datetime-local" class="form-control form-control-custom date-input" required />
                    </div>                   
                    <span asp-validation-for="AdministeredDate" class="text-danger"></span>
                </div>

                <!-- Action Buttons -->
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-check-circle" style="margin-right: 8px;"></i>
                        Administer & Record
                    </button>
                    <a href="javascript:history.back()" class="btn btn-back" id="saveButton">
                        <i class="fas fa-arrow-left" style="margin-right: 8px;"></i>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
