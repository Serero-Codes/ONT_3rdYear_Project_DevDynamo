@model ONT_3rdyear_Project.Models.PatientMedicationScript

@{
    ViewData["Title"] = "Medication Already Administered";
}

<h2 class="mt-4">Medication Already Administered</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<table class="table table-bordered mt-3">
    <tr>
        <th>Patient Name</th>
        <td>@Model.Patient?.FirstName @Model.Patient?.LastName</td>
    </tr>
    <tr>
        <th>Medication</th>
        <td>@Model.Medication?.Name</td>
    </tr>
    <tr>
        <th>Visit Date</th>
        <td>@Model.VisitSchedule?.VisitDate.ToString("yyyy-MM-dd")</td>
    </tr>
    <tr>
        <th>Dosage</th>
        <td>@Model.Dosage</td>
    </tr>
    <tr>
        <th>Administered By</th>
        <td>@Model.AdministeredBy?.FullName</td>
    </tr>
    
</table>

<div class="mt-3">
    <a asp-action="EditAdministered" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
    <a asp-action="DeleteAdministered" asp-route-id="@Model.Id" class="btn btn-danger me-2">Delete</a>
    <a asp-action="Administered" class="btn btn-secondary">Back to List</a>
</div>
