@model ONT_3rdyear_Project.ViewModels.RequestInstructionViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Request Doctor Instruction";
}
@{
    var user = await UserManager.GetUserAsync(User);
    var roles = await UserManager.GetRolesAsync(user);
}

<div class="instructions-form-container">
    <div class="container">
        <!-- Header -->
        <div class="form-header">
            <h1 class="page-title">Request Doctor Instruction</h1>
        </div>

        <!-- Form Card -->
        <div class="instructions-form-card">
            <!-- Patient Info -->
            

            <!-- Form -->
            <form asp-action="CreateRequest" method="post">
                <input type="hidden" asp-for="PatientID" />

                <div class="form-group-custom">
                    <label class="form-label-custom">Patient Name</label>
                    <input type="text" class="form-control" value="@Model.PatientName" disabled />
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom" for="Message">Message or Note to Doctor </label>
                    <textarea asp-for="Message" class="form-control" rows="4" placeholder="E.g., Patient is not responding to medication..."></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Send Request</button>
                <a asp-controller="@(roles.Contains("Nurse") ? "Nurse" : "NurseSister")" asp-action="PatientsList" class="btn btn-back">
                    <i class="fas fa-arrow-left" style="margin-right: 8px;"></i>
                    Back
                </a>
            </form>
        </div>
    </div>
</div>

<style>
    .instructions-form-container {
        background: url('/images/background3.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        min-height: 100vh;
        padding: 30px 0;
    }

    .form-header {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        text-align: center;
        width: 62%;
        margin: auto;
        margin-bottom: 10px;
    }

    .instructions-form-card {
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        padding: 40px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.3);
        max-width: 700px;
        margin: 0 auto;
    }

    .patient-info-card {
        background: linear-gradient(135deg, #17a2b8 0%, #007bff 100%);
        color: white;
        padding: 25px;
        border-radius: 15px;
        margin-bottom: 35px;
        text-align: center;
        box-shadow: 0 8px 25px rgba(23, 162, 184, 0.3);
    }

    .form-group-custom {
        margin-bottom: 30px;
    }

    .form-label-custom {
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 8px;
        font-size: 14px;
        text-transform: uppercase;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
