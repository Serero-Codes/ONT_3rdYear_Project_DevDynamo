@model ONT_3rdyear_Project.Models.Instruction
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager


@{
    ViewData["Title"] = "Edit Request";
}

@{
	var user = await UserManager.GetUserAsync(User);
	var roles = await UserManager.GetRolesAsync(user);
}
<link href="~/css/NurseStyles.css" rel="stylesheet" />

<div class="vitals-container">
	<div class="header-section">
		<h1 class="header-title">
			Edit Request
		</h1>
	</div>

	<div class="form-content">
		<form asp-action="EditRequest" method="post">
			<input type="hidden" asp-for="InstructionID" />

			<div class="form-group-custom">
				<label class="form-label-custom">Patient Name</label>
				<input type="text" class="form-control" value="@Model.Patient?.FirstName @Model.Patient?.LastName" disabled />
			</div>

			<div class="form-group-custom">
				<label class="form-label-custom" for="message">Message or Note to Doctor </label>
				<textarea asp-for="NurseRequest" class="form-control" rows="4" placeholder="E.g., Patient is not responding to medication..."></textarea>
				<span asp-validation-for="NurseRequest" class="text-danger"></span>
			</div>

			<div class="action-buttons">
				<button type="submit" class="btn btn-success">Save changes</button>
				<a  asp-action="InstructionList" class="btn btn-secondary">Back</a>
			</div>
		</form>
	</div>
</div>
