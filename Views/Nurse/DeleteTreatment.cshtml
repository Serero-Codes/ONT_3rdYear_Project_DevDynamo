@model ONT_3rdyear_Project.Models.Treatment

@{
    ViewData["Title"] = "Delete Treatment";
}

<h2>Delete Treatment</h2>

<h4>Are you sure you want to delete this treatment?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@Model.Patient.FirstName @Model.Patient.LastName </dd>

        @* <dt class="col-sm-2">Visit Date</dt>
        <dd class="col-sm-10">@Model.VisitSchedule.VisitDateTime.ToString("yyyy-MM-dd HH:mm")</dd>
 *@
        <dt class="col-sm-2">Treatment Type</dt>
        <dd class="col-sm-10">@Model.TreatmentType</dd>

        @* <dt class="col-sm-2">Details</dt>
        <dd class="col-sm-10">@Model.TreatmentDetails</dd> *@
    </dl>
</div>

<form asp-action="DeleteTreatment" method="post">
    <input type="hidden" asp-for="TreatmentID" />

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Treatments" class="btn btn-secondary">Cancel</a>
</form>
