@model IEnumerable<ONT_3rdyear_Project.Models.Order>

@{
    ViewData["Title"] = "Approved Requests";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class=" mb-0 text-nowrap">Approved Requests</h1>
                <div class="btn-group gap-2">
                    <a asp-controller="Consumable" asp-action="StockTake" class="btn btn-primary mt-2">New Stock Take</a>
                    <a asp-controller="Consumable" asp-action="OrderConsumables" class="btn btn-success mt-2">New Order</a>
                    <a asp-controller="Consumable" asp-action="Dashboard" class="btn btn-secondary mt-2 text-nowrap">Back</a>
                </div>
            </div>
        </div>
    </div>    
@if (Model.Any())
{
     <table class="table table-striped">
        <thead>
            <tr>
                <th>Ward</th>
                <th>Date</th>
                <th>Requested By</th>
                <th>Consumables</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
           
            @foreach (var req in Model)
            {
              
                <tr>  
                    @if(req.Status == "Approved")
                    {
                    <td>@req.Ward.Name</td>
                    <td>@req.OrderDate.ToShortDateString()</td>
                    <td>@req.User.FullName</td>
                    <td>
                        <ul class="mb-0 list-unstyled ps-3">
                            
                            @foreach (var item in req.ConsumableOrders)
                            {
                                <li>
                                    <strong>@item.Consumable?.Name</strong>
                                    (Requested: @item.QuantityRequested,
                                    Approved: @(item.QuantityApproved))
                                </li>
                            }
                        </ul>
                    </td>
                    <td>
                        @{
                            var items = req.ConsumableOrders.ToList();
                        }
                        <form asp-controller="Consumable" asp-action="ApproveRequest" method="post">
                            <input type="hidden" name="RequestId" value="@req.OrderID" />

                            @for (int i = 0; i < items.Count; i++)
                            {
                                <div class="mb-2">
                                   <!-- Hidden IDs -->
                                    <input type="hidden" asp-for="@items[i].OrderId" />
                                    <input type="hidden" asp-for="@items[i].ConsumableId" />
                                </div>
                            }

                            <!-- Buttons side by side -->
                            <div class="d-flex gap-2">
                                <button type="submit" name="type" value="2" class="btn btn-success btn-sm flex-fill">
                                    Deliver
                                </button>
                                <button type="submit" name="type" value="1" class="btn btn-danger btn-sm flex-fill">
                                    Reject
                                </button>
                            </div>
                        </form>
                    </td>
                    }
                   
                </tr>
            }
        </tbody>
    </table>
   
}
else
{
    <p>No approved requests yet.</p>
}
