@model IEnumerable<ONT_3rdyear_Project.ViewModels.WardConsumableViewModel>
@{
    ViewData["Title"] = "Full Inventory";
    var GroupByWard = Model.GroupBy(x => x.WardName);
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class=" mb-0 text-nowrap">Ward Consumable</h1>
                <div class="btn-group gap-2">
                    <a asp-controller="Consumable" asp-action="StockTake" class="btn btn-primary mt-2">New Stock Take</a>
                    <a asp-controller="Consumable" asp-action="OrderConsumables" class="btn btn-success mt-2">New Order</a>
                </div>
            </div>
        </div>
    </div>    
@foreach (var WardGroup in GroupByWard)
{
        <div class="card w-80 mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h5 class="card-title">@WardGroup.Key</h5>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>Consumable Name</th>
                                        <th>Category</th>
                                        <th>Quantity Available</th>
                                        <th>Last Updated</th>
                                    </tr>
                                </thead>
                                <tbody>                                   
                                        @foreach (var item in WardGroup)
                                        {
                                            <tr>
                                                <td>@item.ConsumableName</td>
                                                <td>@item.Category</td>
                                                <td class="@(item.SystemQuantity < 5 ? "text-danger fw-bold" : "")">
                                                    @item.SystemQuantity
                                                </td>
                                                <td>
                                                    @item.LastUpdated.ToString("yyyy-MM-dd")
                                                    @if ((DateTime.Now - item.LastUpdated).TotalDays > 7)
                                                    {
                                                        <span class="badge bg-warning text-dark">Needs update</span>
                                                    }
                                                </td>
                                            </tr>
                                        }                                 

                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="col-md-4 text-end">
                        <div class="btn-group" role="group">
                            <button class="btn btn-outline-primary openAddConsumableBtn" data-ward-id="@WardGroup.First().WardID" data-ward-name="@WardGroup.Key">Add Consumable</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="modalContainer"></div>
}
@section Scripts {
        <partial name="_ValidationScriptsPartial" />
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const modalContainer = document.getElementById("modalContainer");

                document.querySelectorAll(".openAddConsumableBtn").forEach(button => {
                    button.addEventListener("click", function () {
                        const wardId = this.getAttribute("data-ward-id");
                        const wardName = this.getAttribute("data-ward-name");

                        // Optional: pass wardId to your action
                        fetch(`@Url.Action("AddConsumableToWard", "Consumable")?wardId=${wardId}`)
                            .then(response => response.text())
                            .then(html => {
                                modalContainer.innerHTML = html;

                                const addConsumableToWardModal = new bootstrap.Modal(
                                    document.getElementById('addConsumableToWardModal')
                                );
                                addConsumableToWardModal.show();
                            });
                    });
                });
            });
        </script>

}



