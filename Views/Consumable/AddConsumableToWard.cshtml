@model ONT_3rdyear_Project.ViewModels.WardConsumableViewModel

<div class="modal fade" id="addConsumableToWardModal" tabindex="-1" aria-hidden="true" aria-labelledby="modalLabel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Add Consumable To @ViewBag.WardName</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="AddConsumableToWard" asp-controller="Consumable" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Hidden WardID -->
                    <input type="hidden" asp-for="WardID" />

                    <!-- Consumable selection -->
                    <div class="mb-3">
                        <label asp-for="ConsumableID" class="form-label"></label>
                        <select asp-for="ConsumableID" asp-items="ViewBag.ConsumableList" class="form-select">
                            <option value="">-- Select Consumable --</option>
                        </select>
                        <span asp-validation-for="ConsumableID" class="text-danger"></span>
                    </div>

                    <!-- Quantity -->
                    <div class="mb-3">
                        <label>Quantity</label>
                        <input name="Quantity" type="number" min="1" class="form-control" />
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
