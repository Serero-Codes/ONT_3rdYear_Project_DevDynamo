@model ONT_3rdyear_Project.Models.Vital
@{
	ViewData["Title"] = "Add Vitals";
}

<h2>Record Vitals for @ViewBag.PatientName</h2>

<form asp-action="AddVitals" method="post">

	<input type="hidden" asp-for="PatientID" value="@ViewBag.PatientId" />

	<div class="form-group">
		<label>Patient</label>
		<input type="text" class="form-control" value="@ViewBag.PatientName" disabled />
	</div>

	<div class="form-group">
		<label asp-for="BP"></label>
		<input asp-for="BP" class="form-control" />
		<span asp-validation-for="BP" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Temperature"></label>
		<input asp-for="Temperature" class="form-control" step="any" />
		<span asp-validation-for="Temperature" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="SugarLevel"></label>
		<input asp-for="SugarLevel" class="form-control" />
		<span asp-validation-for="SugarLevel" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="ApplicationUserID">Recorded By</label>
		<select asp-for="ApplicationUserID" class="form-control" asp-items="ViewBag.UserList"></select>
		<span asp-validation-for="ApplicationUserID" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-success mt-3">Save</button>
	<a asp-action="Dashboard" class="btn btn-secondary mt-3">Back</a>
</form>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}