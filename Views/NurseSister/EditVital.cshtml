@model ONT_3rdyear_Project.Models.Vital
@{
	ViewData["Title"] = "Edit Vitals";
}
<div class="container mt-4">
	<h2>Edit Vitals</h2>

	<form asp-action="EditVital" method="post">
		<input type="hidden" asp-for="VitalID" />
		<div class="form-group">
			<label asp-for="PatientID">Patient</label>
			<select asp-for="PatientID" class="form-control" asp-items="ViewBag.PatientList" disabled>
				<option value="">--Select Patient--</option>
			</select>
			<input type="hidden" asp-for="PatientID" />
			<span asp-validation-for="PatientID" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="BP">Blood Pressure</label>
			<input asp-for="BP" class="form-control" />
			<span asp-validation-for="BP" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Temperature"></label>
			<input asp-for="Temperature" class="form-control" />
			<span asp-validation-for="Temperature" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="SugarLevel"></label>
			<input asp-for="SugarLevel" class="form-control" />
			<span asp-validation-for="SugarLevel" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="PulseRate"></label>
			<input asp-for="PulseRate" class="form-control" />
			<span asp-validation-for="PulseRate" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Date"></label>
			<input asp-for="Date" class="form-control" type="datetime-local" />
			<span asp-validation-for="Date" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label>Recorded By</label>
			<input class="form-control" value="@ViewBag.NurseName" disabled />
			<input type="hidden" asp-for="ApplicationUserID" />
		</div>

		<button type="submit" class="btn btn-success mt-3">Update</button>
		<a asp-action="Vitals" class="btn btn-secondary mt-3">Back</a>
	</form>
</div>
@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
