        border-radius: 50px;
    }

    .table-scroll-container {
        max-height: 400px;
        overflow-y: auto;
        overflow-x: auto;
    }

        .content-with-chart {
            display: flex;
            gap: 2rem;
            align-items: flex-start;
        }

        .table-container {
            flex: 1;
            min-width: 0;
        }

        .chart-container {
            width: 400px;
            height: 400px;
            flex-shrink: 0;
            background: var(--white);
            border-radius: 16px;
            padding: 1.5rem;
            box-shadow: var(--shadow);
            border: 1px solid var(--gray-200);
        display: flex;
        flex-direction: column;
        }

            .chart-container h2 {
                font-size: 1.25rem;
                font-weight: 600;
                color: var(--dark-color);
                margin: 0 0 1rem 0;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

                .chart-container h2:before {
