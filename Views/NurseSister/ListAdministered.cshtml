        align-items: center;
        justify-content: center;
        color: var(--white);
        font-weight: 600;
        font-size: 0.9rem;
        flex-shrink: 0;
    }

    .action-buttons {
        display: flex;
        gap: 0.5rem;
        flex-wrap: nowrap;
        align-items: center;
    }

