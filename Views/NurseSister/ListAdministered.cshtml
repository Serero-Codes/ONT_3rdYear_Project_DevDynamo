@model IEnumerable<ONT_3rdyear_Project.ViewModels.AdministerMedicationViewModel>
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
@{
	ViewData["Title"] = "Administered Medication";
	
	
}
@{
    var user = await UserManager.GetUserAsync(User);
    var roles = await UserManager.GetRolesAsync(user);
}


	@if (Model != null && Model.Any())
    {
		<div class="container medications-container">
			<div class="page-header">
				<h1 class="page-title">
					<i class="fas fa-pills">
						Administered Medication
					</i>
				</h1>
			</div>

			<div class="search-section">
                <form method="get" asp-action="ListAdministered">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" name="searchPatient" class="form-control" placeholder="Search by patient name..." value="@ViewContext.HttpContext.Request.Query["searchPatient"]" />
                        </div>
                        <div class="col-md-3">
                            <input type="date" name="fromDate" class="form-control" value="@ViewContext.HttpContext.Request.Query["fromDate"]" />

                        </div>
                        <div class="col-md-3">
                            <input type="date" name="toDate" class="form-control" value="@ViewContext.HttpContext.Request.Query["toDate"]" />
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                        </div>
                    </div>

                    <a asp-controller="@(roles.Contains("Nurse") ? "Nurse" : "NurseSister")" asp-action="Dashboard" class="btn btn-primary" id="btn-back" data-bs-toggle="tooltip" data-bs-placement="top" title="Dashboard">
                        <i class="fas fa-home"></i>
                    </a>
                    <a asp-controller="@(roles.Contains("Nurse") ? "Nurse" : "NurseSister")" asp-action="PatientsList" class="btn btn-primary" id="btn-back" data-bs-toggle="tooltip" data-bs-placement="top" title="Back to List">
                        <i class="fas fa-users"></i>
                    </a>

                    <a asp-action="AdministeredPdf" class="btn btn-danger">
                        <i class="fas fa-file-pdf"></i> Export All to PDF
                    </a>
                </form>
				    @* <input type="text" id="liveSearchInput" class="search-input" placeholder="Search by Patient Name..." autocomplete="off" /> *@
            
			</div>

            <div class="content-with-chart">

                <div class="table-container">
			        <div class="table-scroll-container">
				        <table class="custom-table">
					        <thead>
						        <tr>
							        <th><i class="fas fa-user"></i>Patient Name</th>
							        <th><i class="fas fa-pills"></i>Administered Medication</th>
							        <th><i class="fas fa-pill"></i>Dosage</th>
							        <th><i class="fas fa-calendar"></i>Date Administered</th>
							        <th><i class="fas fa-callendar"></i>Prescription</th>
							        @* <th><i class="fas fa-user"></i>Administered By</th> *@
							        <th><i class="fas fa-cogs"></i>Actions</th>
						        </tr>
					        </thead>
					        <tbody id="searchResults">
						        @foreach (var medication in Model)
						        {
							        <tr>
								        <td>
									        <div class="patient-info">
										        <div class="patient-avatar">
											        @(medication.PatientName.Substring(0, 1)) 
										        </div>
										        <div>
											        <div class="patient-name">@medication.PatientName</div>
										        </div>
									        </div>
								        </td>
								        <td>@medication.MedicationName</td>
								        <td>@medication.Dosage</td>
								        <td>@medication.AdministeredDate.ToShortDateString()</td>
								        <td>
									        @if (medication.HasPrescription)
									        {
										        <a asp-action="DownloadPrescription" asp-route-id="@medication.PrescriptionId" class="btn btn-sm btn-primary">Download PDF</a>
									        }
									        else
									        {
										        <span>N/A</span>
									        }
								        </td>

								        @* <td>@medication.ApplicationUserName</td> *@
								        <td>
									        <div class="action-buttons">


                                            <a asp-action="EditAdministered" class="action-btn btn-treatment" data-bs-toggle="tooltip" data-bs-placement="top" title="Edit" asp-route-id="@medication.Id"><i class="fas fa-edit"></i></a>
                                            <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteMedicationModal" data-id="@medication.Id" data-name="@medication.PatientName" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
									        </button>
									        </div>
								        </td>
							        </tr>
						        }
					        </tbody>
				        </table>
                        </div>
                    </div>
                            <div class="chart-container">
                                <canvas id="medicationsChart"></canvas>
                    </div>
			    </div>


		</div>
	}
	else
	{
		<div class="alert alert-info text-center" role="alert">
			No scheduled medications available.
		</div>
	}

<div class="modal fade" id="deleteMedicationModal" tabindex="-1" aria-labelledby="deleteMedicationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteMedicationModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this medication record for <strong id="deletePatientName"></strong>?
            </div>
            <div class="modal-footer">
                <form method="post" asp-action="DeleteAdminister" asp-controller="NurseSister">
                    <input type="hidden" id="deleteMedicationId" name="id" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>

            </div>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        Swal.fire({
            icon: 'success',
            title: 'Success!',
            text: '@TempData["SuccessMessage"]',
            timer: 2000,
            showConfirmButton: false
        });
    </script>
}

<style>
